<div class="body">
	<div class="container">
		<% if @user.errors.any? %>
  			<div class="error_explanation">
  				<h3><%= @user.errors.count %> errors prohibited this book from being saved:
  				</h3>
    			<ul>
      			<% @user.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
   			 	</ul>
  			</div>
		<% end %>
		<div class="row">
			<h2>User info</h2>

			<%= form_for(@user) do |f| %>
				<div class="field">
					<label for="user_name">Name</label>
						<%= f.text_field :name %>
				</div>
				<div class="field">
					<label for="user_image">Image</label>
						<%= f.attachment_field :profile_image %>
				</div>
				<div class="field">
					<label for="user_introduction">Introduction</label>
						<%= f.text_area :introduction %>
				</div>
				<div class="action">
					<%= f.submit 'Update User' %>
				</div>
			<% end %>
		</div>
	</div>
</div>