
<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	<table class="table">
		<tbody>
			<tr></tr>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<% if user == current_user %>
			<%= link_to edit_user_path(user.id) do %>
				<div class="btn btn-default col-xs-12 glyphicon glyphicon-wrench" ></div>
			<% end %>
		<% else %>
			<%= link_to user_path(current_user.id) do %>
				<div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
			<% end %>
		<% end %>
	</div>

	<h2>New book</h2>
	<%= form_for(book) do |f| %>
	<div class="field row">
		<label for="book-title">Title</label>
		<br>
		<%= f.text_field :title,class:"col-xs-12" %>
	</div>
	<div class="field row">
		<label for="book-opinion">Opinion</label>
		<br>
		<%= f.text_area :body, class:"col-xs-12" %>
		<%= f.submit 'Create Book', class:"tn btn-primary col-xs-12" %>
	</div>
	<% end %>
</div>